rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ─── Messages ──────────────────────────────────────────────────
    // Anyone can read messages; only authenticated users can create.
    // Updates/deletes handled exclusively by Cloud Functions.
    match /messages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null
                    && request.resource.data.text is string
                    && request.resource.data.text.size() > 0
                    && request.resource.data.text.size() <= 280
                    && request.resource.data.latitude is number
                    && request.resource.data.longitude is number;
      allow update, delete: if false; // Only Cloud Functions (admin SDK)

      // ─── Responses (sub-collection) ────────────────────────────
      match /responses/{responseId} {
        allow read: if true;
        allow create: if request.auth != null
                      && request.resource.data.text is string
                      && request.resource.data.text.size() > 0
                      && request.resource.data.text.size() <= 280;
        allow update, delete: if false;
      }
    }

    // ─── Presence ──────────────────────────────────────────────────
    // Users can only write their own presence record.
    match /presence/{messageId}/{userId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId;
    }

    // ─── Deny everything else ──────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
